<div id="show-hike">
  <h1>Hike Info:</h1><br>
  <h2 class="hikeName"><%= @hike.name %></h2>
  <%= link_to "Click here to see hike details", hike_path(@hike), class: "show_hike_details" %>

  <br>
<div class="hike_details">
  <ul></ul>
</div>

  <h3 class="hikeState"><%= @hike.state %></h3>
  <p class="hikeDescription"><%= @hike.description %></p><br />
</div>

<%= link_to "Click here to see comments", hike_comments_path(@hike), class: "load_comments" %>
<div class='hike_comments'>
  <% @hike.comments.each do |c| %>
  <ul>
    <li><%= c.content %><br>by: <%= c.commentor.username %></li><br>
      <% if current_user.id == c.user_id %>
        <%= form_tag(hike_comment_path(@hike, c), method: "delete") do %>
          <div><%= submit_tag 'Delete Comment' %></div>
        <% end %>
      <% end %>
  </ul>
  <% end %>
</div>

<div class='fancy_hike_comments'>
  <ul>
    <% if current_user.id == @comment.user_id %>
      <%= form_tag(hike_comment_path(@hike, @comment), method: "delete") do %>
      <li><%= submit_tag 'Delete Comment' %></li>
      <% end %>
    <% end %>
  </ul>
</div>


<div class='new_comment'>
  <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
  <br>
</div>

<%= link_to "Edit", edit_hike_path(@hike) %>
<%= link_to "Back", user_hikes_path(@user) %>
<%= link_to "Delete", @hike, method: :delete, data: { confirm: "Are you sure you want to delete this hike?"} %>
