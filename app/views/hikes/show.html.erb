<div id="show-hike">
  <h1>Hike Info:</h1><br />
  <h2 class="hikeName"><%= @hike.name %></h2>
  <h3 class="hikeState"><%= @hike.state %></h3>
  <p class="hikeDescription"><%= @hike.description %></p><br />

<%= link_to "Next Hike", "/hikes/#{@hike[:id] + 1 }", class: "next-hike" %>
<%= link_to "Previous Hike", "/hikes/#{@hike[:id] - 1 }", class: "previous-hike" %>
</div>

<h2>Add a comment:</h2>
  <%= render 'comments/form' %>
<br />

<h3>Comments:</h3>
  <%= render 'comments/comments'%>
<br />

<%= link_to "Edit", edit_hike_path(@hike) %>
<%= link_to "Back", user_hikes_path(@user) %>
<%= link_to "Delete", @hike, method: :delete, data: { confirm: "Are you sure you want to delete this hike?"} %>
